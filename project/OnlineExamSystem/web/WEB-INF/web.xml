<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <display-name>OnlineExamSystem</display-name>
    <servlet id="jsp">
        <servlet-name>jsp</servlet-name>
        <servlet-class>org.apache.jasper.servlet.JspServlet</servlet-class>
        <init-param>
            <param-name>compilerSourceVM</param-name>
            <param-value>1.8</param-value>
        </init-param>
        <init-param>
            <param-name>compilerTargetVM</param-name>
            <param-value>1.8</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.authentication.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GoogleOAuthLoginController</servlet-name>
        <servlet-class>controller.authentication.GoogleOAuthLoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GoogleOAuthCallbackController</servlet-name>
        <servlet-class>controller.authentication.GoogleOAuthCallbackController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.authentication.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginErrorView</servlet-name>
        <jsp-file>/login/error.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>HibernateTestController</servlet-name>
        <servlet-class>controller.HibernateTestController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GoogleOAuthLoginController</servlet-name>
        <url-pattern>/oauth2login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GoogleOAuthCallbackController</servlet-name>
        <url-pattern>/oauth2callback</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginErrorView</servlet-name>
        <url-pattern>/login/error</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HibernateTestController</servlet-name>
        <url-pattern>/hbtest</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
